# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
char_set = utf-8
max_line_length = 70

[*.py]
indent_size = 4
max_line_length = 120

[*.bash,zsh,sh]
indent_size = 2

[*.lua]
indent_size = 2

[*.md]
indent_size = 4

[Makefile]
indent_style = tab
