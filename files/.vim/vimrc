
" COMMON (between vim and nvim) 
source ~/.vim/common.vim

" PLUGINS
source ~/.vim/plugins.vim

" disable highlights on esc
" consider using romainl/vim-cool to solve this issue
map <ESC> :noh<cr>
" map <leader>n :noh<cr>

" Escape in terminal actually escapes the terminal
tnoremap <Esc> <C-\><C-n>

" when done go back to including aru's autocmsds
" " SETTINGS
" Fix the cursor to not blink 
let &t_SI = "\e[5 q"
let &t_EI = "\e[2 q"

" statusline
set laststatus=2    " Always show status line (1 for only 1 file)
set statusline=\
set statusline+=%<
" set statusline+=%{aru#statusline_fileprefix()}
set statusline+=%t
set statusline+=\
" set statusline+=%([%{aru#statusline_ft()}%{aru#statusline_fenc()}%R%M]%)
set statusline+=%=
set statusline+=\
set statusline+=%l:%L:%P
set statusline+=\


