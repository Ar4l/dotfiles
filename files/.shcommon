# prompt walters

# color in ls output without -G, works across shells
export CLICOLOR=true

export PAGER=less
export MANPAGER=$PAGER

# filename (if known), line number if known, falling back to percent if known,
# falling back to byte offset, falling back to dash
export LESSPROMPT='?f%f .?ltLine %lt:?pt%pt\%:?btByte %bt:-...'

# less options
# i: search case insensitive
# M: show detailed prompt (line numbers/remaining)
# F: exit if output fits on one screen
# R: ansi color support
# X: don't clear screen on exit
export LESS=iFMR

# color man pages.
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;38;5;208m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[04;38;5;111m'

if [[ -d ~/.local/bin ]]; then 
  PATH=~/.local/bin:$PATH
fi

# Handy python functions
export PYTHONSTARTUP="$HOME/.config/python/startup.py"

# Use better-featured BuildKit (not fully backwards-compatible)
export BUILDKIT=1
