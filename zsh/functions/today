# vim:filetype=zsh
# return today's date in various formats

while [[ "$1" =~ ^- && ! "$1" == "--" ]]; do
  case $1 in
    -l | --long)
      echo "$(command date +'%Y-%m-%d %a %H:%M')" && return
      ;;
    -h | --human)
      command date +'%a %b %d, %Y' && return
      ;;
  esac; shift;
done
echo "$(command date +'%Y-%m-%d %a')"
