# vim:filetype=zsh
# return today's date in various formats

while [[ "$1" =~ ^- && ! "$1" == "--" ]]; do
  case $1 in
    -l | --long)
      command date +'%Y-%m-%d %H:%M' && return
      ;;
    -h | --human)
      command date +'%b %d, %Y' && return
      ;;
  esac; shift;
done
command date +'%Y-%m-%d'
